<form class="form-signin" action='/patients' autocomplete="off" method='POST'>
  <h2 class="form-signin-heading">Add your loved one you care for</h2>
  <!-- ADD HERE THE caregivers ID  -->
  <% if current_user %>
    <input type='hidden' name='caregiver_id' value='<%= current_user.id %>' />
  <% end %>
  <input type="text" name="name" class="form-control" placeholder="Name" id="name" autofocus>
  <input type="text" name="email" class="form-control" placeholder="Email address" id="email" autofocus>
  <input type="text" name="mobile" class="form-control" placeholder="Mobile Phone number" id="mobile" autofocus>
  <input type="text" name="phone" class="form-control" placeholder="House Phone number" id="phone" autofocus>
  <input type="text" name="age" class="form-control" placeholder="Age" id="age" autofocus>
  <div>
    Gender:
    <label style="display:inline-block;" class="checkbox">
      <input type="checkbox" value="male" name="gender"> Male
    </label>
    <label style="display:inline-block; margin-top:10px;" class="checkbox">  
      <input type="checkbox" value="female" name="gender"> Female
    
    </label>
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Add</button>
</form>