

<style>


/* RESPONSIVE CSS
-------------------------------------------------- */

@media (min-width: 768px) {

  /* Remove the edge padding needed for mobile */
  .marketing {
    padding-left: 0;
    padding-right: 0;
  }

  /* Navbar positioning foo */
  .navbar-wrapper {
    margin-top: 20px;
  }
  /* The navbar becomes detached from the top, so we round the corners */
  .navbar-wrapper .navbar {
    border-radius: 4px;
  }

  /* Bump up size of carousel content */
  .carousel-caption p {
    margin-bottom: 20px;
    font-size: 21px;
    line-height: 1.4;
  }

  .featurette-heading {
    font-size: 50px;
  }

}

@media (min-width: 992px) {
  .featurette-heading {
    margin-top: 120px;
  }
}
</style>

<div id="" class=" ">
      <!-- Indicators -->
      
      <div class="inner">
        <div class="item active">
          
         
            <div class="caption">
              <h1>Add a device to track the data</h1>
              <p>You can syncronize all the devices <%= @patient_name.capitalize %> uses to track all the data in one place, by simply clicking on add to dashboard and signing in with <%= @patient_name.capitalize %> account.</p>
              
            </div>
          
        </div>
        
      </div>
     
    </div>

<hr class="featurette-divider">

      <div class="row featurette">
        <div class="col-md-7">
          <h2 class="featurette-heading"><%= @device1[:name] %> <span class="text-muted">by <%= @device1[:company] %></span></h2>
          <button type="button" onclick="addDevice('<%= @device1[:device_type] %>');" class="btn btn-lg btn-primary">Add to Dashboard</button>
          <button type="button" onclick="buyDevice('<%= @device1[:buy_link] %>');" class="btn btn-lg btn-link">Buy</button>
          <p class="lead"><%= @device1[:description] %></p>
        </div>
        <div class="col-md-5">
          <img class="featurette-image img-responsive" src="<%= @device1[:image] %>" data-src="<%= @device1[:image] %>" alt="<%= @device1[:name] %>">
        </div>
      </div>

      <hr class="featurette-divider">

      <div class="row featurette">
        <div class="col-md-5">
          <img class="featurette-image img-responsive" src="<%= @device2[:image] %>" data-src="<%= @device2[:image] %>" alt="<%= @device2[:name] %>">
        </div>
        <div class="col-md-7">
          <h2 class="featurette-heading"><%= @device2[:name] %> <span class="text-muted"><%= @device2[:company] %></span></h2>
          <button type="button" onclick="addDevice('<%= @device2[:device_type] %>');" class="btn btn-lg btn-primary">Add to Dashboard</button>
          <button type="button" onclick="buyDevice('<%= @device2[:buy_link] %>');" class="btn btn-lg btn-link">Buy</button>
          <p class="lead"><%= @device2[:description] %></p>
        </div>
      </div>

 <script>
  function addDevice(deviceType)
  {
  	patient_id = '<%= @patient_id %>';
  	window.location.href = "/devices/add?patient_id=" + patient_id + "&device_type=" + deviceType;
  }
  function buyDevice(buy_link)
  {
  	window.location.href = buy_link;
  }
 </script>
